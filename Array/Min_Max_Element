//Find min and max element from array
// Approach : use 2 variables and assign first value of array
// iterate through all elements and replace the value of min and max varaibles
class pair
{
  long first;
  long second;
  public pair(long first, long second)
  {
    this.first = first;
    this.second = second;
  }
}

class Compute 
{
    static pair getMinMax(long a[], long n)  
    {
        //Write your code here
        long min = a[0];
        long max = a[0];
        
        for(int i=0; i<a.Length; i++)
        {
            
            if(a[i] < min)
                min = a[i];
            if(a[i] > max)
                max = a[i];
        }
        pair p = new pair(min,max);
        return p;
    }
}
